<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#605F5F">

    <ImageView
        android:id="@+id/step_4_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/step_4" />

    <TextView
        android:id="@+id/step_4_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_4_image"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/crayon_font"
        android:text="The game ends when there\nare no more moves\nPlayer with most points wins!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/done"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_4_text"
        android:layout_centerHorizontal="true"

        android:backgroundTint="#4756A5"
        android:fontFamily="@font/crayon_font"
        android:text="Done"
        android:textSize="24sp" />
</RelativeLayout>